<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

<u><h1>The LongestWord Game</h1></u>

<div class="main-container">
<h1>New game</h1>

<div class="letters">
  <% @letters.each do |letter| %>
  <div class="letter">
    <p><%= letter %></p>
  </div>
  <% end %>
</div>

<div class="form-section">
  <p class="form-prefix">What is the longest word you can find?</p>

  <form action="/score" method="POST" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <div class="input-group input-group">
      <input type="text" name="word" class="form-control" placeholder="Type your word...">
      <span class="input-group-btn">
        <input type="submit" value="Play" class="btn btn-default">
      </span>
    </div>
  </form>
</div>
</div>
